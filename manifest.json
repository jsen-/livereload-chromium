{
	"manifest_version": 2,

	"name": "node-dev-livereload",
	"description": "Automaticaly reload browser on node-dev restart",
	"version": "0.1",

	"permissions": [
		"tabs"
	],
	"browser_action": {
		"default_icon": "icons/off.png",
		"default_title": "node-dev-livereload"
	},
	"background": {
		"scripts": ["background.js"]
	}
}